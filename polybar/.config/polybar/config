module-margin-right = 1

font-0 = "Misc Tamzen:pixelsize=14:antialias=false;1"
font-1 = "Misc Tamzen:pixelsize=14:antialias=false;1"
font-2 = "Wuncon Siji:pixelsize=10:antialias=false;1"

modules-left = mylabel bspwm2
