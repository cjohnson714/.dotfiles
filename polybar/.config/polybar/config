modules-right = volume wifi battery backlight memory cpu date

tray-position = right
tray-padding = 3
tray-transparent = false
tray-offset-y = 0%
tray-offset-x = 0%
;tray-maxsize = 18
;tray-detached = true
;tray-background = ${colors.my_color4}

wm-restack = bspwm

;override-redirect = true

